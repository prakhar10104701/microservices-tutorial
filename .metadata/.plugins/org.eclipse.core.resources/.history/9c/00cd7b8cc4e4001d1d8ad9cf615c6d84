server:
  port: 8084
spring:
  application:
    name: APIGATEWAY
  cloud:
    gateway:
      routes:
      - id: USERSERVICE
        uri: lb://USERSERVICE
        predicates:
        - Paths= /users/**
      - id: RATINGSERVICE
        uri: lb://RATINGSERVICE
        predicates:
        - Paths= /rating/**
      - id: HOTELSERVICE
        uri: lb://HOTELSERVICE
        predicates:
        - Paths= /hotel/**
      
          

eureka:
  client:
    fetch-registry: true
    register-with-eureka: true
    serviceUrl:
      defaultZone: http://localhost:8080/eureka
      
  instance:
    prefer-ip-address: true
    